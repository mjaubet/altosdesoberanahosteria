---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';
import settings from '../content/settings/global.json';
import contactData from '../content/pages/contacto.json';
import PageHero from '../components/PageHero';
import { Phone, Mail, MapPin } from 'lucide-react';
---

<Layout title="Contacto">
    <PageHero
        title={contactData.title}
        subtitle={contactData.intro}
        image={contactData.headerImage}
        client:load
    />

    <div class="py-20 bg-patagonia-snow min-h-screen">
        <div class="container mx-auto px-6">
            <div class="flex flex-col lg:flex-row gap-12 max-w-6xl mx-auto">
                {/* Info Card */}
                <div class="lg:w-5/12">
                    <div
                        class="bg-patagonia-deep text-white p-10 rounded-xl shadow-xl h-full flex flex-col justify-center relative overflow-hidden"
                    >
                        {/* Decorative circle */}
                        <div
                            class="absolute -top-10 -right-10 w-40 h-40 bg-white/5 rounded-full blur-3xl"
                        >
                        </div>

                        <h3 class="font-serif text-2xl mb-8 text-white">
                            Información de Contacto
                        </h3>

                        <div class="space-y-8">
                            <div class="flex items-start gap-4">
                                <MapPin
                                    className="mt-1 text-patagonia-sand shrink-0"
                                />
                                <div>
                                    <span
                                        class="block text-xs uppercase tracking-widest text-white/50 mb-1"
                                        >Dirección</span
                                    >
                                    <p class="leading-snug">
                                        {settings.address}
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <Phone
                                    className="mt-1 text-patagonia-sand shrink-0"
                                />
                                <div>
                                    <span
                                        class="block text-xs uppercase tracking-widest text-white/50 mb-1"
                                        >Teléfono / WhatsApp</span
                                    >
                                    <p class="leading-snug">
                                        {settings.phone}
                                    </p>
                                    <p class="leading-snug opacity-70">
                                        {settings.whatsapp}
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <Mail
                                    className="mt-1 text-patagonia-sand shrink-0"
                                />
                                <div>
                                    <span
                                        class="block text-xs uppercase tracking-widest text-white/50 mb-1"
                                        >Email</span
                                    >
                                    <p class="leading-snug">
                                        {settings.email}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {/* Form */}
                <div class="lg:w-7/12">
                    <div
                        class="bg-white p-8 md:p-10 rounded-xl shadow-sm border border-stone-100"
                    >
                        <h3
                            class="font-serif text-2xl text-patagonia-deep mb-6"
                        >
                            Envíenos un mensaje
                        </h3>
                        <ContactForm client:visible />
                    </div>
                </div>
            </div>

            {/* Google Maps Section */}
            <div class="mt-16 max-w-6xl mx-auto">
                <h3
                    class="font-serif text-3xl text-patagonia-deep mb-6 text-center"
                >
                    Nuestra Ubicación
                </h3>
                <div
                    class="rounded-xl overflow-hidden shadow-lg border border-stone-200"
                >
                    <iframe
                        src={contactData.mapUrl}
                        width="100%"
                        height="450"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                        title="Ubicación de Hostería Altos de Soberana"
                    ></iframe>
                </div>
            </div>
        </div>
    </div>
</Layout>
