---
import { SEO } from 'astro-seo';
import Header from '../components/Header';
import FooterLogo from '../components/FooterLogo';
import settings from '../content/settings/global.json';
import '../styles/global.css';

interface Props {
    title: string;
    description?: string;
    image?: string;
    canonical?: string;
    type?: 'website' | 'article';
    sd?: any;
}

const {
    title,
    description,
    image,
    canonical,
    type = 'website',
    sd,
} = Astro.props;

const siteTitle = 'Altos de Soberana';
const fullTitle = title === 'Home' ? siteTitle : `${title} | ${siteTitle}`;
const siteDescription =
    description ||
    'Hostería patagónica en El Calafate. Vista inigualable del Lago Argentino y calidez familiar.';
const siteImage = image || settings.logo;
const canonicalURL =
    canonical || new URL(Astro.url.pathname, Astro.site).toString();

const baseJsonLd = [
    {
        '@context': 'https://schema.org',
        '@type': 'LodgingBusiness',
        '@id': 'https://altosdesoberanacalafate.com.ar/#business',
        name: 'Hostería Altos de Soberana',
        image: [siteImage],
        telephone: settings.phone,
        email: settings.email,
        address: {
            '@type': 'PostalAddress',
            streetAddress: settings.address,
            addressLocality: 'El Calafate',
            addressRegion: 'Santa Cruz',
            postalCode: '9405',
            addressCountry: 'AR',
        },
        url: 'https://altosdesoberanacalafate.com.ar/',
        priceRange: '$$',
        geo: {
            '@type': 'GeoCoordinates',
            latitude: -50.3392, // Example coordinates, should be verified
            longitude: -72.2476,
        },
    },
    {
        '@context': 'https://schema.org',
        '@type': 'WebSite',
        '@id': 'https://altosdesoberanacalafate.com.ar/#website',
        url: 'https://altosdesoberanacalafate.com.ar/',
        name: 'Hostería Altos de Soberana',
        description: siteDescription,
        publisher: {
            '@id': 'https://altosdesoberanacalafate.com.ar/#business',
        },
    },
];

const jsonLd = sd ? [...baseJsonLd, sd] : baseJsonLd;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicon.svg"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <SEO
            title={title}
            titleTemplate={title === 'Home' ? siteTitle : `%s | ${siteTitle}`}
            description={siteDescription}
            canonical={canonicalURL}
            openGraph={{
                basic: {
                    title: fullTitle,
                    type: type,
                    image: siteImage,
                    url: canonicalURL,
                },
                optional: {
                    siteName: siteTitle,
                    description: siteDescription,
                    locale: 'es_AR',
                },
            }}
            twitter={{
                card: 'summary_large_image',
                title: fullTitle,
                description: siteDescription,
                image: siteImage,
            }}
            extend={{
                meta: [
                    { name: 'robots', content: 'index, follow' },
                    { name: 'author', content: 'Matias Jaubet' },
                ],
            }}
        />
        <script
            type="application/ld+json"
            set:html={JSON.stringify(jsonLd)}
        />
    </head>
    <body class="antialiased text-stone-600 bg-patagonia-snow font-sans">
        <Header
            client:load
            logo={settings.logo}
        />

        <main>
            <slot />
        </main>

        <footer class="bg-patagonia-deep text-patagonia-sand py-16">
            <div class="container mx-auto px-6 grid md:grid-cols-3 gap-12">
                <div>
                    <FooterLogo
                        client:load
                        src={settings.logo}
                        alt="Altos de Soberana"
                        className="h-16 w-[220px] opacity-80 mb-6"
                    />
                    <p class="text-sm opacity-80 leading-relaxed max-w-xs">
                        La calidez de la Patagonia Argentina en un entorno único
                        frente al Lago Argentino.
                    </p>
                </div>
                <div>
                    <h4 class="font-serif text-lg mb-4 text-white">Contacto</h4>
                    <ul class="space-y-4 text-sm opacity-80">
                        <li class="flex items-start gap-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="mt-0.5 shrink-0"
                                ><path
                                    d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                                ></path><circle
                                    cx="12"
                                    cy="10"
                                    r="3"
                                ></circle></svg
                            >
                            <span>{settings.address}</span>
                        </li>
                        <li class="flex items-center gap-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="shrink-0"
                                ><path
                                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                ></path></svg
                            >
                            <a
                                href={`tel:${settings.phone}`}
                                class="hover:text-white transition-colors"
                                >{settings.phone}</a
                            >
                        </li>
                        <li class="flex items-center gap-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="shrink-0"
                                ><rect
                                    width="20"
                                    height="16"
                                    x="2"
                                    y="4"
                                    rx="2"
                                ></rect><path
                                    d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                                ></path></svg
                            >
                            <a
                                href={`mailto:${settings.email}`}
                                class="hover:text-white transition-colors"
                                >{settings.email}</a
                            >
                        </li>
                        <li class="flex items-center gap-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                                stroke="none"
